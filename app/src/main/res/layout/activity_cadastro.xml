<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.parceiro.View.Cadastro">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btCliente"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Cliente"
            android:textSize="40dp"
            android:textStyle="bold"
            android:layout_margin="18dp"
            android:background="@drawable/button_aceitar_servico"/>

        <Button
            android:id="@+id/btColaborador"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Colaborador"
            android:textSize="40dp"
            android:textStyle="bold"
            android:layout_margin="18dp"
            android:background="@drawable/button_select_colaborador"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>